<!DOCTYPE html>
<html lang="ptbr">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header class="container">
        <%- include('../partials/header'); %>
        <% if(req.session.loggedin) { %>
        <%- include('../partials/menu_dashboard'); %>
        <% } %>
    </header>
    <main class="container">
        <!-- <div class="jumbotron"></div> -->
        <div class="container-sm border border-danger rounded-lg">
            <div class="form-group">
                <h3 style="text-align: center;">Inserir postagem</h3>
                <form action="/cadastrar_posts" method="post">
                    <div class="form-group">
                        <div><label for="titulo">Título da postagem</label></div>
                        <div><textarea id="titulo" name="titulo" required class="form-control"></textarea></div>
                    </div>
                    <div class="form-group">
                        <div><label for="conteudo">Conteúdo da postagem</label></div>
                        <div> <textarea id="conteudo" name="conteudo" required class="form-control"></textarea></div>
                        
                        
                        
                    </div>
                    <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script>
                    <script type="text/javascript">
                        bkLib.onDomLoaded(function() { nicEditors.allTextAreas() }); // convert all text areas to rich text editor on that page
                
                        bkLib.onDomLoaded(function() {
                             new nicEditor().panelInstance('area1');
                        }); // convert text area with id area1 to rich text editor.
                
                        bkLib.onDomLoaded(function() {
                             new nicEditor({fullPanel : true}).panelInstance('area2');
                        }); // convert text area with id area2 to rich text editor with full panel.
                </script>
                
                    <!-- TODO: Implementar um campo para verificar na página se as senhas coincidem -->
                    <div><button type="submit" class="form-control btn btn-dark">Inserir nova postagem</button></div>
                </form>
            </div>
        </div>
        <div class="fixed-bottom">...</div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>